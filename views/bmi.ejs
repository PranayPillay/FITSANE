<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    body{
        background-image: url("/images/bg1.jpg");
    }
    .bmicontain
{ 
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    color: #fff;
    background-size: cover;
}
.container1{
    
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    height: 300px;
    width: 300px;
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 10px;
    background: transparent;
    backdrop-filter: blur(50px);
    padding: 2rem;
    padding-top: 100px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    justify-content: center;
    
    
}
.adjust
{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    padding: 0 20px;
}

.form-label
{
    margin-right: 10px;
    flex: 1;
    text-align: left;
}
.form-control {
    flex: 2;
    padding: 5px;
}

#b {
    background: linear-gradient(45deg, #cc66ff,#cc66ff,#cc66ff);
    color: white;
    font-size: 15px;
    font-weight: bold;
    border: none;
    cursor: pointer;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    text-transform: uppercase;
    text-align: center;
    height: 40px;
    margin: 0 auto;
}

#b:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
}

#b:active {
    transform: translateY(2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

#bcd{
    top:0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto 0;
    width:150px;
    justify-content: center;
    
}
#textarea
{
    padding:30px;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 auto;

    
}
</style>
<body>
    <div class="bmicontain">
        <div class="container1">
            <div class="adjust">
                <label for="height" class="form-label">height</label>
                <input type="text" class="form-control" id="height">
            </div>
            <div class="adjust">
                <label for="weight" class="form-label">weight</label>
                <input type="text" class="form-control" id="weight">
            </div>
            <div class="adjust">
                <label for="Age" class="form-label">Age</label>
                <input type="text" class="form-control" id="Age">
            </div>
            <button class="btn btn-primary" id="b" onclick="bmi()">Submit</button>
            <div id="textarea">
                <label id="bcd"></label>
            </div>
        </div>
    </div> 
    
    

    <script>
        function bmi() {
         bbb = document.getElementById("b");
         bbb.addEventListener("click", () => {
             a = document.getElementById('height').value;
             num = parseInt(a);
             ba = document.getElementById('weight').value;
             num1 = parseInt(ba);
             ge = document.getElementById('Age').value;
             num3 = parseInt(ge);
             result = 10 * num1 + 6.25 * num - (5 * num3) + 5;
             document.getElementById("textarea").innerHTML = "your maintanance calories is : " + result;
         });
     }
 </script> 
</body>
</html>

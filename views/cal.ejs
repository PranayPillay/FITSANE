                <div class="video-title">Warm Up</div>
                <div class="controls-container">
                    <button class="btn-custom" onclick="togglePlayPause('video1', this)">Play</button>
                    <button class="btn-custom" onclick="startTimer('video1')">Start Timer</button>
                    <button class="btn-custom" onclick="stopTimer('video1')">Stop Timer</button>
                    <input type="checkbox"> Done
                </div>
                <span id="video1-timer" class="timer">Time: 0s</span>
            </div>
            

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>calesthenics</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('/images/Land.jpg') no-repeat center center fixed;
            background-size: cover;
        }
        .video-container {
            margin-bottom: 20px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }
        .video-container:hover {
            transform: scale(1.05);
        }
        video {
            width: 100%;
            max-width: 600px;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgb(219, 18, 95);
        }
        .video-title {
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            margin-top: 10px;
            color: azure;
            background-color: orange;
            border-radius: 40px;
            padding: 5px;
            box-shadow: 0 4px 6px rgb(255, 7, 218);
            display: inline-block;
        }
        .controls-container {
            margin-top: 10px;
        }
        .timer {
            font-size: 16px;
            margin-top: 5px;
            color: white;
            background-color: black;
            padding: 5px;
            border-radius: 5px;
            display: inline-block;
        }
        .btn-custom {
            background-color: #ff7f50;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
            margin: 5px;
        }
        .btn-custom:hover {
            background-color: #ff4500;
        }
    </style>
    <script>
        var timers = {};
        
        function togglePlayPause(id, button) {
            var video = document.getElementById(id);
            if (video.paused) {
                video.play();
                button.textContent = "Pause";
            } else {
                video.pause();
                button.textContent = "Play";
            }
        }

        function startTimer(id) {
            var timerSpan = document.getElementById(id + "-timer");
            if (!timers[id]) {
                timers[id] = { seconds: 0, interval: null };
            }
            if (!timers[id].interval) {
                timers[id].interval = setInterval(function () {
                    timers[id].seconds++;
                    timerSpan.textContent = "Time: " + timers[id].seconds + "s";
                }, 1000);
            }
        }

        function stopTimer(id) {
            if (timers[id] && timers[id].interval) {
                clearInterval(timers[id].interval);
                timers[id].interval = null;
            }
        }
    </script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/home/<%= Email %>">FITSANE</a>
            </div>
        </div>
    </nav>
    
    <div class="container" style="margin-top: 80px;">
        <div class="row">
            <div class="col-md-12 video-container">
